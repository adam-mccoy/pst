<UserControl x:Class="PstEditor.MessageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PstEditor"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{local:MessageModel}">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Subject:</Label>
            <TextBlock Text="{Binding Subject}" VerticalAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>To:</Label>
            <TextBlock Text="{Binding To}" VerticalAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Cc:</Label>
            <TextBlock Text="{Binding Cc}" VerticalAlignment="Center" />
        </StackPanel>
    </StackPanel>
</UserControl>

